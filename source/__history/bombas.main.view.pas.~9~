unit bombas.main.view;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ComCtrls, Vcl.Buttons, Vcl.StdCtrls, Vcl.ExtCtrls, bomba.tanque.view;

type
  TfrmMain = class(TForm)
    pcPrincipal: TPageControl;
    tbsBombas: TTabSheet;
    tbsAjustes: TTabSheet;
    TabSheet3: TTabSheet;
    Panel3: TPanel;
    lblTitulo: TLabel;
    spdbtnAjustes: TSpeedButton;
    TabSheet1: TTabSheet;
    btnTanque: TButton;
    procedure FormCreate(Sender: TObject);
    procedure spdbtnAjustesClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmMain: TfrmMain;

implementation

{$R *.dfm}

procedure TfrmMain.FormCreate(Sender: TObject);
var
  I: Integer;
begin
  for I := 0 to pcPrincipal.PageCount -1 do
    pcPrincipal.Pages[I].TabVisible := False;
  pcPrincipal.ActivePage := tbsBombas;
end;

procedure TfrmMain.spdbtnAjustesClick(Sender: TObject);
begin
  pcPrincipal.ActivePage := tbsAjustes;
end;

end.
